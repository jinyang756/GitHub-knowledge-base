{
  "llm_clients": {
    "default": {
      "provider": "openai",
      "api_key": "YOUR_OPENAI_API_KEY",
      "model": "gpt-3.5-turbo",
      "temperature": 0.7,
      "max_tokens": 1000
    },
    "embedding": {
      "provider": "openai",
      "api_key": "YOUR_OPENAI_API_KEY",
      "model": "text-embedding-ada-002",
      "embedding_dim": 1536
    }
  },
  "vector_stores": {
    "default": {
      "provider": "faiss",
      "index_path": "../docs/vector_stores/default_index",
      "embedding_dim": 1536,
      "similarity_metric": "cosine",
      "normalize_vectors": true,
      "llm_client_name": "embedding"
    },
    "financial": {
      "provider": "faiss",
      "index_path": "../docs/vector_stores/financial_index",
      "embedding_dim": 1536,
      "similarity_metric": "cosine",
      "normalize_vectors": true,
      "llm_client_name": "embedding"
    }
  },
  "knowledge_graphs": {
    "default": {
      "provider": "networkx",
      "graph_path": "../docs/knowledge_graphs/default_graph",
      "directed": true,
      "multigraph": false
    },
    "financial_entities": {
      "provider": "networkx",
      "graph_path": "../docs/knowledge_graphs/financial_entities",
      "directed": true,
      "multigraph": false
    }
  },
  "text_processors": {
    "default": {
      "language": "zh",
      "segmentation_mode": "default",
      "stopwords_path": "ai_services/nlp/stopwords.txt",
      "keywords_top_n": 10,
      "keywords_method": "textrank",
      "min_sentence_length": 5
    },
    "financial": {
      "language": "zh",
      "segmentation_mode": "default",
      "stopwords_path": "ai_services/nlp/stopwords.txt",
      "keywords_top_n": 15,
      "keywords_method": "textrank",
      "min_sentence_length": 5,
      "domain_specific_keywords": true
    }
  },
  "utils": {
    "cache": {
      "enabled": true,
      "memory_cache_size": 1024,
      "file_cache_path": "../docs/cache",
      "default_ttl": 3600
    },
    "logging": {
      "level": "INFO",
      "console_enabled": true,
      "file_enabled": true,
      "file_path": "../logs/ai_service.log",
      "max_bytes": 10485760,
      "backup_count": 5,
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "error_handling": {
      "debug_mode": false,
      "traceback_enabled": true,
      "notify_admin": false
    }
  }
}